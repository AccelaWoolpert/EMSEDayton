<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Hansen8 application path.  This is the fully qualified path to the Hansen8 application installation.  If a path is not specified the current executing assembly's path will be used (which is the default for releases). -->
    <add key="hansen8path" value="" />
  </appSettings>
  <system.diagnostics>
    <trace autoflush="true" indentsize="4">
      <listeners>
        <!-- Valid traceOutputOptions are:  None, LogicalOperationStack, DateTime, Timestamp, ProcessId, ThreadId and Callstack -->
        <!-- You can use multiple output options by delimiting them with a comma -->
        <!-- Remove this <add> node if you wish to log BatchManager trace information to a separate file
        <add name="DefaultTextListener" 
          type="System.Diagnostics.TextWriterTraceListener"
          initializeData="BatchManager.log"
          traceOutputOptions="DateTime"/>
        <remove name="Default" />
        -->
        <add name="DefaultTextListener" type="Hansen.Core.BatchManager.Console.CustomConsoleTraceListener, Hansen.Core.BatchManager.Console" traceOutputOptions="None" />
        <remove name="Default" />
      </listeners>
    </trace>
    <switches>
      <!-- Valid levels are:  Off, Error, Warning, Info and Verbose -->
      <add name="BatchManagerTraceSwitch" value="Info" />
    </switches>
  </system.diagnostics>
</configuration>